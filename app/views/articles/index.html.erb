<h1>Articles</h1>

<%= link_to 'Add new article', new_article_path %>

<hr>

<% @articles.each do |article| %>
  <%= link_to article.title, article_path(article) %>
  <p><%= article.content %></p>
  <%= link_to 'edit', edit_article_path(article) %>
  <%= link_to 'delete', article_path(article), method: 'delete' %>
  <br><hr>
<% end %>
